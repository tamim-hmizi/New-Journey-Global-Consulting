{% block body %}
<section id="contacts-1" class="wide-60 section de contacts">
					<div class="container">
					 	<div class="row">
				 		<!-- LOCALISATION -->
						<div class="col-sm-6 col-lg-3">
							<div class="contact-box icon-xs">
								<div class="contact-box-icon"><span class="flaticon-240-placeholder"></span></div>
								<h5 class="h5-sm deepblue-color">Notre localisation</h5>														
								<p class="grey-color">Route de Tunis km 1.5, Imm. Panorama,</p>
								<p class="grey-color">1er étage, bureau n°7, Sfax, Tunisie</p>
							</div>
						</div>


						<!-- TÉLÉPHONES -->
						<div class="col-sm-6 col-lg-3">
							<div class="contact-box icon-xs">
								<div class="contact-box-icon"><span class="flaticon-172-telephone-1"></span></div>
								<h5 class="h5-sm deepblue-color">Parlons</h5>	
								<p class="grey-color">Téléphone : +216 54 101 100</p>
								
							</div>
						</div>


						<!-- EMAIL -->
						<div class="col-sm-6 col-lg-3">
							<div class="contact-box icon-xs">
								<div class="contact-box-icon"><span class="flaticon-235-mail"></span></div>
								<h5 class="h5-sm deepblue-color">Envoyer un message</h5>	
								<p class="grey-color"><a href="mailto:m.cheour@newjourney.tn">m.cheour@newjourney.tn</a></p>
								
							</div>
						</div>


						<!-- HORAIRES DE TRAVAIL -->
						<div class="col-sm-6 col-lg-3">
							<div class="contact-box icon-xs">
								<div class="contact-box-icon"><span class="flaticon-358-wall-clock-1"></span></div>
								<h5 class="h5-sm deepblue-color">Horaires de travail</h5>	
								<p class="grey-color">Lun - Ven : 9:00 - 18:00</p>
								<p class="grey-color">Sam : 9:00 - 14:00</p>
							</div>
						</div>


				 	</div>	  <!-- Fin de la rangée -->
				</div>	   <!-- Fin du container -->	
			</section>
<section id="contacts-3" class="bg-lightgrey bg-tra-city wide-80 section de contacts">
					<div class="container">
                    					<!-- TITRE DE LA SECTION -->
					<div class="row">	
						<div class="col-md-12 section-title center">		

			 				<!-- Titre -->
							<h2 class="h2-xs">Vous avez des questions ? Contactez-nous</h2>

							<!-- Texte -->	
							

						</div>
					</div>	 <!-- FIN DU TITRE DE LA SECTION -->	


					<!-- FORMULAIRE DE CONTACT -->	
				 	<div class="row">
				 		<div class="col-lg-10 offset-lg-1">
				 			<div class="form-holder">
				 				<form name="contactForm" class="row contact-form">
				                                            
					                <!-- Champ de saisie du formulaire de contact -->
					                <div id="input-name" class="col-lg-6">
					                	<input type="text" name="name" class="form-control name" placeholder="Entrez votre nom*" required> 
					                </div>
					                 
					                <!-- Champ de saisie du formulaire de contact -->        
					                <div id="input-email" class="col-lg-6">
					                	<input type="text" name="email" class="form-control email" placeholder="Entrez votre email*" required> 
					                </div>	

					                <!-- Sélection du formulaire de contact -->
					                <div id="input-subject" class="col-lg-12 input-subject">
					                    <select id="inlineFormCustomSelect2" name="subject" class="custom-select subject" required>
					                        <option value="">Votre question concernant..</option>  
					                      	<option>Visa étudiant</option>
					                      	<option>Visa de visiteur</option>
					                      	<option>Visa d'immigration</option>
					                      	
					                      	<option>Visa de visiteur</option>
					                      	<option>Autre...</option>
					                    </select>
					                </div>			                          
					                 
					                 <!-- Champ de saisie du formulaire de contact -->        
					                <div id="input-message" class="col-lg-12 input-message">
					                	<textarea class="form-control message" name="message" rows="6" placeholder="Votre message ..." required></textarea>
					                </div> 
					                                            
					                <!-- Bouton du formulaire de contact -->
					                <div class="col-lg-12 mt-15 form-btn text-right"> 
					                	<button type="submit" class="btn btn-primary tra-black-hover submit">Envoyer votre message</button> 
					                </div>
					                                                              
					                <!-- Message du formulaire de contact -->
					                <div class="col-lg-12 contact-form-msg text-center">
					                	<div class="sending-msg"><span class="loading"></span></div>
					                </div>  
				                                              
				                </form> 
				 			</div>	
				 		</div>	
				 	</div>  <!-- FIN DU FORMULAIRE DE CONTACT -->	


				</div>	   <!-- Fin du container -->
			</section>

{% endblock %}
