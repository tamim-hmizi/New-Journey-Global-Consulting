        <div class="row d-flex align-items-center">

            <!-- CALL TO ACTION TEXT -->
            <div class="col-md-8 col-lg-7 offset-md-4 offset-lg-5">
                <div class="cta-txt">

                    <!-- Title  -->
                    <h3 class="h3-xl">Consultations pour visa de visiteur</h3>

                    <!-- Text -->
                    <p class="p-lg">Commencez votre voyage avec une consultation personnalisée pour votre demande de visa de visiteur. Nos experts sont prêts à vous aider à chaque étape.</p>

                    <!-- Button  -->
                    <a href="mailto:youremail@mail.com" class="btn btn-md btn-primary tra-white-hover btn-arrow">
                        <span>Obtenez une consultation <i class="fas fa-arrow-right"></i></span>
                    </a>

                </div>    
            </div>

        </div> <!-- End row -->
    </div> <!-- End container -->
</section>


